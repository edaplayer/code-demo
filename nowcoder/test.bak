#include <stdio.h>
#include <string.h>
int main(int argc, char **argv)
{
	char c = 0;
	char s[5000];
	int i = 0;
	int cnt = 0;

	while(scanf("%c", &s[i]) != EOF)
	{
		if(s[i] == ' ')
			cnt = 0;
		else
			cnt++;
		i++;
	}
	printf("length of last word is %d\n", cnt-1);
	s[i-1] = '\0';
	printf("last word = %s\n", &s[i-cnt]);
}
